<% if user_signed_in? %>
  <%= form_with url: search_path, local: true do |f| %>
    <%= f.text_field :word %>
    <%= f.select :range, options_for_select([["User"],["Book"]]) %>
    <%= f.select :search, options_for_select([["perfect_match", "完全一致"], ["forward_match", "前方一致"], ["backword_match", "後方一致"], ["partial_match", "部分一致"]]) %>
    <%= f.submit "検索" %>
  <% end %>
<% end %>