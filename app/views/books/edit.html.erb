<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mt-3 mx-auto">
      <h1>Editing Book</h1>
      <%= render "books/error", model: @book %>
      <%= form_with model: @book, local: true do |f| %>
        <div class="form-group">
          <%= f.label :Title %>
          <%= f.text_field :title, class:"form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :Opinion %>
          <%= f.text_area :body, class:"form-control" %>
        </div>
        <div class="form-group" id="star">
          <%= f.label :rate %>
          <%= f.hidden_field :rate, class:'form-control' %>
        </div>

        <script>
          $('#star').raty({
            size     : 36,
            starOff:  '<%= asset_path('star-off.png') %>',
            starOn :  '<%= asset_path('star-on.png') %>',
            starHalf: '<%= asset_path('star-half.png') %>',
            scoreName: 'book[rate]',
            readOnly: true,
            half: true,
　　　　　　score: <%= @book.rate %>
          });
        </script>

        <%= f.submit "Update Book", class:"btn btn-success" %>
      <% end %>
      <div class="mt-3">
        <%= link_to "Show", book_path(@book) %>
        |
        <%= link_to "Back", books_path %>
      </div>
    </div>
  </div>
</div>